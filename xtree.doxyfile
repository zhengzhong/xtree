#
# Doxyfile for xtree project. To generate documentations:
#
# > cd path/to/xtree/codebase
# > doxygen xtree.doxyfile
#

#-------------------------------------------------------------------------------
# project meta info
#-------------------------------------------------------------------------------

PROJECT_NAME = xtree
PROJECT_NUMBER = 0.9.2

#-------------------------------------------------------------------------------
# output settings
#-------------------------------------------------------------------------------

OUTPUT_DIRECTORY = ./_build/doxygen
CREATE_SUBDIRS = NO
OUTPUT_LANGUAGE = English
DOXYFILE_ENCODING = UTF-8

#-------------------------------------------------------------------------------
# input settings
#-------------------------------------------------------------------------------

INPUT = ./include
RECURSIVE = YES

#-------------------------------------------------------------------------------
# pre-processing
#-------------------------------------------------------------------------------

MACRO_EXPANSION = YES
SEARCH_INCLUDES = YES
INCLUDE_PATH = ./include
#PREDEFINED =

#-------------------------------------------------------------------------------
# generation of API documentations
#-------------------------------------------------------------------------------

BUILTIN_STL_SUPPORT = YES
EXTRACT_ALL = YES

#-------------------------------------------------------------------------------
# generation of source code fragments
#-------------------------------------------------------------------------------

SOURCE_BROWSER = YES
TAB_SIZE = 4
INLINE_SOURCES = NO
STRIP_CODE_COMMENTS = NO

#-------------------------------------------------------------------------------
# documentation formats
#-------------------------------------------------------------------------------

GENERATE_HTML = YES
GENERATE_LATEX = NO
GENERATE_RTF = NO
GENERATE_MAN = NO
GENERATE_XML = NO
GENERATE_AUTOGEN_DEF = NO
GENERATE_PERLMOD = NO

# EOF
